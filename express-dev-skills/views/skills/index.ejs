<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>My Developer Skills</title>
</head>
<body>
    <p><a href="/">Home</a></p>
    <h1>Skills</h1>
    <ul>
      <% skills.forEach(function(skill, idx) { %>
        <li>
          <form action="/skills/<%= idx %>?_method=DELETE" class="delete-form" method="POST">
          <button type="submit">X</button>
        </form>
          <a href="/skills/<%= idx %>"><%= skill.skill %></a>
            - 
          <%= skill.level %>
        </li>
      <% }); %>
    </ul>
    <a href="/skills/new">Add Skill</a>
  </body>
</html>